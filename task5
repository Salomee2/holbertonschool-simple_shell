#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>
#include <sys/types.h>
#include <sys/wait.h>

/**
 * get_path - Finds the full path of a command using the PATH environment variable.
 * @cmd: The command to locate.
 *
 * Return: The full path of the command if found, or NULL if not found.
 */
char *get_path(char *cmd)
{
    char *path = getenv("PATH");
    char *token, full_path[1024];

    if (!path)
        return NULL;

    token = strtok(path, ":");
    while (token)
    {
        snprintf(full_path, sizeof(full_path), "%s/%s", token, cmd);
        if (access(full_path, X_OK) == 0)
            return strdup(full_path);
        token = strtok(NULL, ":");
    }
    return NULL;
}

/**
 * main - Entry point of the simple shell program.
 *
 * This program displays a prompt, reads user input, and executes commands.
 * It also handles the "exit" built-in command to terminate the shell.
 *
 * Return: Always 0 on success.
 */
int main(void)
{
    char *line = NULL, *cmd_path;
    size_t len = 0;
    pid_t pid;

    while (1)
    {
        printf("$ ");
        if (getline(&line, &len, stdin) == -1) /* Read user input */
            break;

        line[strcspn(line, "\n")] = '\0';

        if (strcmp(line, "exit") == 0) /* Check for the "exit" command */
            break;

        cmd_path = get_path(line);
        if (!cmd_path)
        {
            perror("./hsh");
            continue;
        }

        pid = fork();
        if (pid == 0)
        {
            char *args[] = {cmd_path, NULL};
            execve(cmd_path, args, NULL);
            perror("./hsh");
            exit(EXIT_FAILURE);
        }
        else if (pid > 0)
        {
            wait(NULL);
        }
        else
        {
            perror("fork");
        }

        free(cmd_path);
    }

    free(line);
    return 0;
}
